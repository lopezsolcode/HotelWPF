<UserControl x:Class="HotelManagementSystem.Views.Habitaciones"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:HotelManagementSystem.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="830" d:DesignWidth="700">


    <Grid Grid.Column="1" Margin="30 20 20 20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <!--Search Textbox-->
        <Grid Width="300" HorizontalAlignment="Left">
            <TextBlock Margin="20 0" VerticalAlignment="Center" Foreground="#b0b9c6" IsHitTestVisible="False"
                                   Panel.ZIndex="1" Text="Buscar..." Padding="15 10"  >

            </TextBlock>

            <TextBox x:Name="txtSearch" Background="#ffffff" Foreground="#b0b9c6" BorderThickness="0" FontSize="15" Padding="15 10" VerticalAlignment="Center" Height="36">
                <TextBox.Template>
                    <ControlTemplate TargetType="TextBoxBase">
                        <Border x:Name="border" CornerRadius="20" Background="{TemplateBinding Background}" SnapsToDevicePixels="True" BorderThickness="1" BorderBrush="#e0e6ed">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="False" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#d9d9d9" TargetName="border"/>
                            </Trigger>

                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#d9d9d9" TargetName="border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </TextBox.Template>
            </TextBox>
            <materialDesign:PackIcon Kind="Magnify" Width="15" Height="15" VerticalAlignment="Center" 
                                                 Margin="0 0 15 0" Foreground="#b0b9c6" HorizontalAlignment="Right"/>

        </Grid>
        <!--Top Buttons-->
        <Button Background="Transparent" HorizontalAlignment="Right" Margin="0 0 20 0">
            <materialDesign:PackIcon Kind="Cog" Height="15" Width="15" Background="Transparent" Foreground="#623ed0"></materialDesign:PackIcon>
        </Button>
        <Button Background="Transparent" HorizontalAlignment="Right" Margin="0 0 90 0">
            <materialDesign:PackIcon Kind="Bell" Height="15" Width="15" Background="Transparent" Foreground="#623ed0"></materialDesign:PackIcon>
        </Button>
        <!--Page Title-->
        <TextBlock Text="Habitaciones" Grid.Row="1" FontSize="32" FontWeight="SemiBold" Margin="0 20 0 0"
                               HorizontalAlignment="Left" Foreground="#121518">
        </TextBlock>
        <!--Add button-->
        <Button
                       Height="35"
                       Width="150"
                       HorizontalAlignment="Right"
                       Command="{Binding AgregarCommand}"
                       Margin="0,20,0,0"
                       FontSize="13"
                       Background="#6741d9"
                       Foreground="#ffffff"
                       FocusVisualStyle="{x:Null}"  
                       Grid.Row="1" Click="Add_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#6741d9"/>
                    <Setter Property="Foreground" Value="#ffffff"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="7">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <!-- Aquí van los triggers -->
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#7b5cd6"/>
                            <Setter Property="Foreground" Value="#ffffff"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="Plus" Width="11" Height="11" VerticalAlignment="Center" Margin="0 1 8 0" Foreground="#ffffff"/>
                <TextBlock Text="Agregar nueva..." FontSize="14" Foreground="#ffffff" VerticalAlignment="Stretch"/>

            </StackPanel>
        </Button>
        <!-- Separator -->
        <Separator Height="1" Margin="0 -1 0 10" Background="#dae2ea" Grid.Row="3"/>

        <!-- Tab Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0 10 0 0">
            <Button  
             Content="Reservadas"
             Background="Transparent"
             Foreground="#121518"
             FocusVisualStyle="{x:Null}"   
             Width="70"
             Height="45"
             BorderBrush="Transparent"
             FontSize="14"
             FontWeight="SemiBold" Click="Reserved_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#6741d9"/>
                        <Setter Property="Foreground" Value="#ffffff"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" BorderThickness="0 0 0 1" BorderBrush="{TemplateBinding BorderBrush}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <!-- Aquí van los triggers -->
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#784ff2"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

            </Button>
            <Button  
         Content="Libres"
         Background="Transparent"
         Foreground="#121518"
         FocusVisualStyle="{x:Null}"   
         Width="70"
         Height="45"
         BorderBrush="Transparent"
         FontSize="14"
         FontWeight="SemiBold" Click="Free_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#6741d9"/>
                        <Setter Property="Foreground" Value="#ffffff"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" BorderThickness="0 0 0 1" BorderBrush="{TemplateBinding BorderBrush}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <!-- Aquí van los triggers -->
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#784ff2"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

            </Button>
            <Button  
     Content="Todas"
     Background="Transparent"
     Foreground="#121518"
     FocusVisualStyle="{x:Null}"   
     Width="70"
     Height="45"
     BorderBrush="Transparent"
     FontSize="14"
     FontWeight="SemiBold" Click="All_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#6741d9"/>
                        <Setter Property="Foreground" Value="#ffffff"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" BorderThickness="0 0 0 1" BorderBrush="{TemplateBinding BorderBrush}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <!-- Aquí van los triggers -->
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#784ff2"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

            </Button>

        </StackPanel>

        <!--Counter Title-->
        <TextBlock Text="Número actual de habitaciones: " Grid.Row="4" FontSize="18" FontWeight="SemiBold" Foreground="#121518" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
        <TextBlock Text="Filtrar por:" Grid.Row="4" FontSize="13" FontWeight="SemiBold" Foreground="#121518" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0 0 215 0"></TextBlock>

        <!--Filtrar Textbox-->
        <Grid Width="200" Grid.Row="4" HorizontalAlignment="Right">
            <TextBlock Margin="15 0" VerticalAlignment="Center" Foreground="#b0b9c6" IsHitTestVisible="False"
               Panel.ZIndex="1" Text="Buscar entre miembros..." Padding="15 10"></TextBlock>

            <TextBox x:Name="txtFiltrar" Padding="10 7" Background="#ffffff" Foreground="#b0b9c6" BorderThickness="0" FontSize="15"  VerticalAlignment="Center" Height="36">
                <TextBox.Template>
                    <ControlTemplate TargetType="TextBoxBase">
                        <Border x:Name="border" CornerRadius="7" Background="{TemplateBinding Background}" SnapsToDevicePixels="True" BorderThickness="1" BorderBrush="#e0e6ed">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="False" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#d9d9d9" TargetName="border"/>
                            </Trigger>

                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#d9d9d9" TargetName="border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </TextBox.Template>
            </TextBox>

        </Grid>

        <!--Datagrid-->
        <DataGrid x:Name="RoomsDataGrid"
          Grid.Row="5"
          AutoGenerateColumns="False"
          Style="{DynamicResource DataGridStyle1}"
          CellStyle="{DynamicResource DataGridCellStyle1}"
          ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
          RowStyle="{DynamicResource DataGridRowStyle1}"
          ItemsSource="{Binding HabitacionesFiltradas}">
            <DataGrid.Columns>
           
                <!-- Columnas desde la base de datos -->
                <DataGridTextColumn Header="ID" Binding="{Binding Roomid}" IsReadOnly="True" Width="*" />
                <DataGridTextColumn Header="Número de habitación" Binding="{Binding RoomNo}" IsReadOnly="True" Width="*" />
                <DataGridTextColumn Header="Tipo de habitación" Binding="{Binding RoomType}" IsReadOnly="True" Width="*" />
                <DataGridTextColumn Header="Cama" Binding="{Binding Bed}" IsReadOnly="True" Width="*" />
                <DataGridTextColumn Header="Precio" Binding="{Binding Price}" IsReadOnly="True" Width="*" />
                <DataGridTextColumn Header="Reservado" Binding="{Binding Booked}" IsReadOnly="True" Width="*" />

                <!-- Columna de operaciones -->
                <DataGridTemplateColumn Header="Opciones" IsReadOnly="True" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <!-- Botón Editar -->
                                <Button Margin="2" Click="Edit_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="#512da8"/>
                                            <Setter Property="BorderBrush" Value="#4a148c"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="5" Padding="5">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#673ab7"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <materialDesign:PackIcon Kind="PencilOutline" Width="12" Height="12" VerticalAlignment="Center" />
                                </Button>

                                <!-- Botón Eliminar -->
                                <Button Margin="2" Click="Delete_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="#d32f2f"/>
                                            <Setter Property="BorderBrush" Value="#b71c1c"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="5" Padding="5">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#f44336"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <materialDesign:PackIcon Kind="DeleteOutline" Width="12" Height="12" VerticalAlignment="Center"/>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        
    </Grid>
</UserControl>
